{
  "name": "vsnotes",
  "displayName": "VSNotes",
  "description": "A tool to organize notes by workspaces",
  "version": "0.1.0",
  "publisher": "arbaaz-laskar",
  "author": {
    "name": "Arbaaz Laskar",
    "email": "arzkar.dev@gmail.com"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/arzkar/VSNotes"
  },
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "vsnotes",
    "notes",
    "note taking",
    "productivity",
    "note"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:extension.createNote",
    "onCommand:extension.openNote",
    "onCommand:extension.deleteNote"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vsnotes-container",
          "title": "%vsnotes.activitybar.title%",
          "icon": "resources/vsnotes-icon.png"
        }
      ]
    },
    "views": {
      "vsnotes-container": [
        {
          "id": "vsnotes-FileView",
          "name": "%vsnotes.container.name%"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.createNote",
        "title": "Create Note"
      },
      {
        "command": "extension.openNote",
        "title": "Open Note"
      },
      {
        "command": "extension.deleteNote",
        "title": "Delete Note"
      }
    ],
    "keybindings": [
      {
        "command": "extension.createNote",
        "key": "ctrl+n",
        "mac": "cmd+n",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.saveNote",
        "key": "ctrl+s",
        "mac": "cmd+s",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "command": "extension.deleteNote",
        "key": "delete",
        "when": "explorerViewletVisible && explorerViewletFocus && !inputFocus"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.createNote",
          "group": "navigation",
          "when": "explorerViewletVisible && explorerResourceIsFile"
        },
        {
          "command": "extension.openNote",
          "group": "navigation",
          "when": "explorerViewletVisible && explorerResourceIsFile"
        },
        {
          "command": "extension.deleteNote",
          "group": "navigation",
          "when": "explorerViewletVisible && explorerResourceIsFile"
        }
      ],
      "editor/context": [
        {
          "command": "extension.createNote",
          "group": "navigation"
        },
        {
          "command": "extension.openNote",
          "group": "navigation"
        },
        {
          "command": "extension.deleteNote",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "sqlite3": "^5.1.6"
  }
}
